@model MvcLibrary.Models.ReservationBookViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Do you want to checkout this book to user "@Html.DisplayFor(model => model.UserName)"?</h2>

<p class="text-danger">@ViewData["ErrorMessage"]</p>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValidDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValidDate)
        </dd>
    </dl>

    <form asp-action="Checkout">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Checkout" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
